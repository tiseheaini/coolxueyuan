<% provide(:location, truncate(@topic.title, :length => 30)) %>
<div class="wrap-left">
    <div class="left-content">
        <% if flash[:notice] %>
          <%= render :partial => 'shared/topics/flash' %>
        <% end %>
				<% cache "topic-#{@topic.id}-#{@topic.updated_at.to_i}" do %>
          <%= render :partial => 'shared/topics/article' %>
				<% end %>
				  <% if !@reply.blank? %>
				    <%= render :partial => 'shared/topics/reply' %>
				  <% end %>
				  <%= render :partial => 'shared/topics/btn_reply' %>
    </div>
</div>

<div class="wrap-right">
    <div class="right-sidebar">
		  <%= render :partial => "shared/sidebar/sidebar_login" %>
    </div>  
</div>

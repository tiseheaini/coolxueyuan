<div id="home-nav">
    <div id="home-nav-top"></div>
        <div id="home-nav-cont">
				    <%= link_to "首页", home_index_path %>
						<span class="dividr">></span>
						<span><%= truncate @topic.title, :length => 30 %></span>
        </div>
    <div id="home-nav-bottom"></div>
</div>
<div class="wrap-left">
    <div class="left-content">
        <% if flash[:notice] %>
          <%= render :partial => 'shared/topics/flash' %>
        <% end %>
				<% cache "topic-#{@topic.id}-#{@topic.updated_at.to_i}" do %>
          <%= render :partial => 'shared/topics/article' %>
				<% end %>
				  <% if !@reply.blank? %>
				    <%= render :partial => 'shared/topics/reply' %>
				  <% end %>
				<% cache "topic#{@topic.id}-btn-reply" do %>
				  <%= render :partial => 'shared/topics/btn_reply' %>
				<% end %>

    </div>
</div>

<div class="wrap-right">
    <div class="right-sidebar">
		  <%= render :partial => "shared/sidebar/sidebar_login" %>
    </div>  
</div>

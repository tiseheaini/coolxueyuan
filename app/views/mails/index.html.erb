<div id="home-nav">
    <div id="home-nav-top"></div>
        <div id="home-nav-cont">
				    <%= link_to "首页", home_index_path %>
						<span class="dividr">></span>
						<%= params[:node_name] %>
        </div>
    <div id="home-nav-bottom"></div>
</div>
<div class="wrap-left">
    <div class="left-content">
        <div class="left-content-top"></div>
        
        <div class="left-content-cent mail-content">
				    <% @mails.each do |mail| %>
						  <div class="mails-list">
							    <div class="list-single">
							        <div class="mail-list-face"><%= image_tag(User.find(mail.senduser).photo_url(:small)) %></div>
											<div class="mail-text">
											    <span class="mail-text-title"><%= User.find(mail.senduser).nickname %>在<%= mail.created_at.to_date %>给你发的信息</span><br />
											    <span><%= mail.text %></span>
											</div>
									</div>
							</div>
							<div class="line mail-line"></div>
						<% end %>
        </div>
            
        <div class="left-content-bottom"></div>
    </div>
</div>

<div class="wrap-right">
    <div class="right-sidebar">
        <div class="sidebar-login">
						<% if current_user %>
						    <%= render :partial => "shared/sidebar/user_info", :object => @user %>
					  <% else %>
                <%= render :partial => "shared/sidebar/form_login" %>
					  <% end %>
        </div>

				<div class="sidebar-node">
				    <%= render :partial => "shared/sidebar/node_nav" %>
				</div>
          
    </div>  
</div>
